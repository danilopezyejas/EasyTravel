<!doctype html>
<html lang="es">
<head>
  {% block head %}
    <title>Easy Travel</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    <link rel="stylesheet" href="assets/index/css/main.css" />
  {% endblock %}
</head>
<body>
  <div class="nav_login">
    <form class="" action="login" method="get">
      <input type="submit" id="login" class="login" value="Login">
    </form>
    <form class="" action="registro" method="get">
      <input type="submit" id="" class="registrarse" value="Registrarse">
    </form>

  </div>
  <div class="banner">
    <h2 class="banner__destino">Bienvenido a Easy Travel</h2>
    <form class="banner__subtitle" action="./paquetes" method="POST">
      <div>
        <!--input type="search" name="destino" id="destino" placeholder="Destino"-->
        <select name="destino" id="destino">
          <option value="CSVQ">SEVILLA</option>
          <option value="AJFK">NEW YORK</option>
          <option value="CATL">ATLANTA</option>
          <option value="CLAX">LOS ANGELES</option>
          <option value="CANC">ANCHORAGE</option>
          <option value="CMAD">MADRID</option>
          <option value="CPHX">PHOENIX</option>
          <option value="CBCN">BARCELONA</option>
        </select>
      </div>
      <div>
        <input type="number" name="precioMin" placeholder="Precio">
      </div>
      <div>
        <input type="date" name="fecha" placeholder="Fecha">
      </div>
      <div>
        <input type="search" name="tematica" placeholder="Tematica">
      </div>
      <div>
        <input type="submit" value="Buscar" class="boton_formulario"/>
      </div>
    </form>
  </div>

  {% block footer %}
    <footer id="footer">
      <ul class="icons">
        <li><a href="https://twitter.com/explore" class="icon brands fa-twitter"><span class="label">Twitter</span></a></li>
        <li><a href="https://www.instagram.com/?hl=es-la" class="icon brands fa-instagram"><span class="label">Instagram</span></a></li>
        <li><a href="#" class="icon fa-envelope"><span class="label">Email</span></a></li>
      </ul>
    </footer>
  {% endblock %}

  {% block head_js %}
    <script src="assets/index/js/main.js"></script>
  {% endblock %}
</body>

</html>
